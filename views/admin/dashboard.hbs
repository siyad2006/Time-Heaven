        width: 100%;
      }
    </style>

    
    <script>
      window.onload = function () {
        const url = new URLSearchParams(window.location.search)

        const filter = url.get('filter')

        console.log('this is the filter from the onload function', filter)

        const value = document.getElementById('timeRange')

        if (filter) {
          console.log('changed')
          value.value = filter
        }

      }
    </script>

    <script>
      document.getElementById('timeRange').addEventListener('change', function (event) {
        event.preventDefault()

        console.log(this.value)

        let value = this.value

        window.location.href = `/admin/dashboard?filter=${value}`

      })

    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>

      let salesChart;
      const salesData = {{{ formattedData }}};


      console.log('this is sales data ', salesData.year)
      let newdata = salesData.year
      function initChart(timeRange = 'week') {
        const ctx = document.getElementById('salesChart').getContext('2d');

        if (salesChart) {
          salesChart.destroy();
        }

        salesChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: newdata.labels,
            datasets: [{
              label: 'Total Sales',
              data: newdata.sales,
              borderColor: '#2563eb',
              backgroundColor: '#3b82f610',
              tension: 0.4,
              borderWidth: 3,
              fill: true,
              pointRadius: 4,
              pointBackgroundColor: '#2563eb',
              pointHoverRadius: 6
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              },
              tooltip: {
                backgroundColor: 'white',
                titleColor: '#333',
                bodyColor: '#666',
                borderColor: '#ddd',
                borderWidth: 1,
                padding: 12,
                callbacks: {
                  label: function (context) {
                    return `Sales: $${context.parsed.y.toLocaleString()}`;
                  }
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                grid: {
                  color: '#f0f0f0'
                },
                ticks: {
                  font: {
                    size: 12
                  },
                  callback: function (value) {
                    return '$' + value.toLocaleString();
                  }
                }
              },
              x: {
                grid: {
                  display: false
                },
                ticks: {
                  font: {
                    size: 12
                  }
                }
              }
            }
          }
        });
      }

      document.getElementById('timeRange').addEventListener('change', (e) => {
        initChart(e.target.value);
      });

      document.addEventListener('DOMContentLoaded', () => {
        initChart();
      });
    </script>





