<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
<script src="/cropper/cropper.js"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      overflow-x: hidden; /* Prevent horizontal scrolling */
    }
    .sidebar {
      background: linear-gradient(180deg, #111, #222);
      width: 260px; 
      height: 100vh; 
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      overflow-y: auto; 
      transition: transform 0.3s ease;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2); 
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }
    .sidebar.hidden {
      transform: translateX(-100%);
    }
    .sidebar .nav-link {
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin: 5px 10px;
      display: flex;
      align-items: center;
    }
    .sidebar .nav-link:hover {
      background-color: #ff4444;
      color: white;
    }
    .sidebar .nav-link.active {
      background-color: #ff4444;
    }
    .sidebar-toggler {
      background-color: #ff4444;
      border: none;
      font-size: 24px;
      color: white;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: none; /* Hidden on larger screens */
    }
    .content {
      margin-left: 260px; /* Match this to the sidebar width */
      padding: 20px;
      transition: margin-left 0.3s ease;
    }
    .content.expanded {
      margin-left: 0;
    }
    .card {
      margin-bottom: 20px; /* Space between cards */
    }
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .sidebar.hidden {
        transform: translateX(0);
      }
      .content {
        margin-left: 0; /* Remove left margin on smaller screens */
      }
      .sidebar-toggler {
        display: block; /* Show toggle button on smaller screens */
      }
    }
    @media (min-width: 769px) {
      .sidebar-toggler {
        display: none; /* Hide toggle button on larger screens */
      }
      .sidebar {
        transform: translateX(0); 
      }
      .content {
        margin-left: 260px; 
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link a" href="/admin/dashboard"><i class="fas fa-chart-pie"></i> Statistics</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/usermanage"><i class="fas fa-users"></i> User Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#"><i class="fas fa-box"></i> Product Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-file-invoice"></i> Order Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-chart-line"></i> Sales Report</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-gift"></i> Offer</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-ticket-alt"></i> Coupon</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="#"><i class="fas fa-tags"></i> Category</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-star"></i> Brand</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-cog"></i> Settings</a>
      </li>
    </ul>
  </div>

  <button class="sidebar-toggler" id="sidebar-toggler">
    &#x22EE; <!-- Unicode for 3 vertical dots -->
  </button>


  <div class="content" id="content">
    <h1>Add product</h1>
   
    <form action="/admin/add" method="post"  enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">product name</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="productname" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">discription</label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="discription">
        </div>
    

           <div class="mb-3">
            <label for="categorySelect" class="form-label">Category</label>
            <select class="form-select" id="categorySelect" name="category">
                <option value="">Select a category</option>
                {{#each categoris}}
                    <option value="{{this._id}}">{{this.categoryname}}</option>
                {{/each}}
            </select>
        </div>

          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">REgular Price</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="regularprice">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Sales price</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="salesprice">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">color</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="color">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Stock</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="quantity">
          </div>
          <div class="mb-3">
            <label for="imageUpload" class="form-label">Add Images</label>
            <input type="file" class="form-control" id="imageUpload" multiple accept="image/*" name="image" onchange="previewImages(event)">
            <small class="form-text text-muted">You can upload exactly 3 images.</small>
        </div>
         <div id="imagePreview" class="d-flex mt-2"></div>



 

          <div class="mb-3">
        <label for="brandInput" class="form-label">Brand</label>
        <input type="text" class="form-control" id="brandInput" name="brand" required>
    </div>
    <div class="mb-3">
        <label for="statusSelect" class="form-label">Status</label>
        <select class="form-select" id="statusSelect" name="status">
            <option value="available">Available</option>
            <option value="out of stock">Out of Stock</option>
        </select>
    </div>

        
        <button type="submit" class="btn btn-primary">Add prduct</button>
      </form>



      
<script>
    function previewImages(event) {
        const imagePreview = document.getElementById('imagePreview');
        imagePreview.innerHTML = ''; 

        const files = Array.from(event.target.files);

      
        if (files.length !== 3) {
            alert("Please select exactly 3 images.");
            return;
        }

        files.forEach(file => {
            const reader = new FileReader();

            reader.onload = function (e) {
                const img = document.createElement('img');
                img.src = e.target.result;
                img.classList.add('img-thumbnail', 'mr-2');
                img.style.width = '100px'; // Set width of preview images
                img.style.height = 'auto';  // Maintain aspect ratio
                imagePreview.appendChild(img);
            };

            reader.readAsDataURL(file);
        });
    }
</script>

  <script>
    const sidebar = document.getElementById('sidebar');
    const sidebarToggler = document.getElementById('sidebar-toggler');
    const content = document.getElementById('content');

    sidebarToggler.addEventListener('click', () => {
      sidebar.classList.toggle('hidden');
      content.classList.toggle('expanded');
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
