    <div class="container cart-container" style="margin-top: 80px;">
        <h4 class="text-center mb-4 text-danger">Wishlist</h4>

        <!-- Cart Items Section -->
        <div class="row">
            <div class="col-12">
                {{!-- {{#each wishlist }} --}}
                {{#each wishlist.products}}
                <div class="cart-item row align-items-center mb-3">
                    <div class="col-md-2 col-3 text-center">
                        <img src="/{{this.image.[0]}}" style="height: 100px; width:150px" alt="Product Image"
                            class="img-fluid rounded">
                    </div>
                    <div class="col-md-4 col-6">
                        <h5 >{{this.name}}</h5>
                    </div>
                    <div class="col-md-2 col-3 text-center">
