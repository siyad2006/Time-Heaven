                    <div class="col-md-2 d-flex justify-content-end">

                        <form action="/user/wishlist/delete/{{this._id}}" method="post">
                            <button class="btn btn-danger btn-sm remove-btn"
                                data-product-id="{{this._id}}">Remove</button>

                        </form>

                        <form action="/user/details/{{this.id}}" method="get">
                            <button type="submit" class="btn btn-outline-primary btn-sm ms-3">Show</button>
                        </form>
                        
                    </div>
                </div>
                {{/each}}
