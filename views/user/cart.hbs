    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            $('input[type="number"]').on('input', function () {
                let newQty = $(this).val(); // Get the new quantity
                const productId = $(this).data('product-id'); // Get product ID

                // Ensure quantity is between 1 and 8
                if (newQty < 1) {
                    newQty = 1;
                    $(this).val(newQty);
                } else if (newQty > 8) {
                    newQty = 8;
                    $(this).val(newQty);
                }

                $.ajax({
                    url: '/user/cart/update',
                    method: 'POST',
                    data: {
                        productId: productId,
                        qty: newQty
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#product-' + productId + '-price').text(response.updatedPrice);
                            $('#total-amount').text(response.newTotalAmount);
                        }
                    },
                    error: function (error) {
                        console.log("Error updating cart:", error);
                    }
                });
            });
        });
    </script>


