        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .product-container {
            max-width: 1200px;
            margin: 3rem auto;
            background-color: white;
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            padding: 2rem;
        }

        .product-image-gallery {
            height: 600px;
