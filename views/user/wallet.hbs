<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet Dashboard</title>
    <link rel="stylesheet" href="/css/homestyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS */
        .bodys {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
        }

        .balance-card {
            border-radius: 15px;
            background-color: #00c853;
            color: white;
            padding: 30px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        .transaction-card {
            border-radius: 15px;
            background-color: white;
            color: #333;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }

        .transaction-table th,
        .transaction-table td {
            padding: 15px;
            text-align: center;
        }

        .modal-header,
        .modal-body {
            background-color: #f8f9fa;
        }

        .modal-footer {
            background-color: #e9ecef;
        }

        @media (max-width: 768px) {

            .balance-card,
            .transaction-card {
                margin-top: 15px;
            }

            .transaction-table th,
            .transaction-table td {
                font-size: 14px;
            }
        }
    </style>
</head>

<body class=".bodys">

    {{> header}}

    <!-- Main Content -->
    <div class="container py-5"  style="margin-top: 70px;">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center">
            <h2>Wallet Dashboard</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFundsModal">Add Funds</button>
        </div>

        <!-- Balance Card -->
        <div class="balance-card text-center">
            <h3>Your Balance</h3>
            <h1>₹{{wallet.amount}}</h1>
        </div>

        <!-- Transaction History -->
        <div class="transaction-card">
            <h4>Transaction History</h4>
            <table class="table table-striped transaction-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each wallet.transaction}}
                    <tr>
                        <td>{{formatDate   this.dateOfTransaction}}</td>
                        <td>{{this.typeoftransaction}}</td>
                        <td>₹{{this.amountOfTransaction}}</td>
                        <td>Success</td>
                    </tr>
                    {{/each}}
                   
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add Funds Modal -->
    <div class="modal fade" id="addFundsModal" tabindex="-1" aria-labelledby="addFundsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addFundsModalLabel">Add Funds to Wallet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="amount" class="form-label"></label>
                            <input type="number" class="form-control" id="amount" placeholder="$100">
                        </div>
                        <div class="mb-3">
                            <label for="paymentMethod" class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod">
                                <option value="credit">Credit Card</option>
                                <option value="paypal">PayPal</option>
                                <option value="bank">Bank Transfer</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Add Funds</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


   {{> footer}}
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>