<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/homestyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <!-- Navbar and Main Content Here -->
    {{> header}}
    <style>
        .edit-container {
            margin-top: 60px;
            width: 75%;
        }

        .edit-card {
            background-color: #F5F5F5;
            border-radius: 10px;
            padding: 30px;
            margin-top: 60px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .edit-card h4 {
            font-family: 'Arial', sans-serif;
            font-weight: 700;
            color: #333;
            margin-bottom: 30px;
        }

        .form-control {
            font-size: 1.1rem;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
        }

        .btn-save {
            font-size: 1rem;
            font-weight: 600;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            background-color: #4CAF50;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-save:hover {
            background-color: #45a049;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        }
    </style>

    <div class="container-fluid edit-container justify-content-center">
        <div class="edit-card">
            <h4 class="text-center">Edit Profile</h4>

            <!-- Form for Editing User Details -->
            <form action="/user/editprofile/change/{{user.id}}" onsubmit="return validation()" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label"><strong>Username</strong></label>
                    <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
                </div>
                {{!-- <div class="mb-3">
                    <label for="email" class="form-label"><strong>Email</strong></label>
                    <input type="email" class="form-control" id="email" name="email" value="{{user.Email}}">
                </div> --}}
                <div class="mb-3">
                    <label for="phone" class="form-label"><strong>Phone Number</strong></label>
                    <input type="tel" class="form-control" id="phone" name="phone" value="{{user.phonenumber}}">
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-save">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script>

        function validation() {
            const name = document.getElementById('username').value;

            const phone = document.getElementById('phone').value;
            const regex = /^[A-Za-z\s]+$/


            if (name.trim() == "") {
                swal.fire({
                    icon: 'error',
                    title: 'error',
                    text: 'name must be filled '
                })
                return false
            }
            if (!regex.test(name)) {
                swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Name can only contain alphabets and spaces.'
                });
                return false;
            }
            if (phone.length < 10 || phone.length > 10) {
                swal.fire({
                    icon: 'error',
                    title: 'error',
                    text: 'phone number must be 10 numbers and '
                })
                return false
            }
            if (!/^\d{10}$/.test(phone)) {
                swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Phone number must be exactly 10 digits.'
                });
                return false;
            }



            return true
        }





    </script>



    <!-- Bootstrap JS and Other Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>