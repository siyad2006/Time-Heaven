    <script>
        let currentPage = 1; // Set this dynamically based on your application logic

        function sortProducts() {
            const sortOption = document.getElementById('sortOptions').value;
            console.log('Current Page:', currentPage); // Debugging line
            console.log('Sort Option:', sortOption); // Debugging line
            // Include current page in the URL when sorting
            window.location.href = `/user/shop?page=${currentPage}&sort=${sortOption}`;
        }

        // Optionally, you can update the currentPage variable based on the URL
        // This can be done during page load, parsing the current page number from the URL.
        window.onload = function () {
            const urlParams = new URLSearchParams(window.location.search);
            currentPage = urlParams.get('page') || 1; // Get page from URL
        };
    </script>



